@model Diary

@{
    ViewData["Title"] = "Günlük Ekle";
}

<h2 class="mb-4">Günlük ekle</h2>
<form class="row g-3" method="post" enctype="multipart/form-data" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Başlık</label>
        <input required type="text" class="form-control" name="Title">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">İçerik</label>
        <input required type="text" class="form-control" name="Description">
    </div>
    <input type="file" name="Img" id="file" accept="image/png, image/jpeg" required/>  
    @* <input type="file" name="Img[]" id="file" accept="image/png, image/jpeg" multiple> *@
    <button class="btn btn-success">Ekle</button>
</form>

